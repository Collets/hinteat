<div class="reviews">
  <h2 class="reviews__title mdc-typography--title">Reviews <span class="reviews-number mdc-typography--caption">({{ reviews | length }})</span></h2>
  <ul class="mdc-list mdc-list--two-line reviews-list">
    {% for review in reviews %}
      <review-component data-injs-review="reviews[{{ loop.index0 }}]"></review-component>        
    {% endfor %}
  </ul>
  <div class="add-review">
    <div class="add-review__stars">
      <a class="mdc-icon-button material-icons add-review__star" data-index="1" aria-pressed="false">star_border</a>
      <a class="mdc-icon-button material-icons add-review__star" data-index="2" aria-pressed="false">star_border</a>
      <a class="mdc-icon-button material-icons add-review__star" data-index="3" aria-pressed="false">star_border</a>
      <a class="mdc-icon-button material-icons add-review__star" data-index="4" aria-pressed="false">star_border</a>
      <a class="mdc-icon-button material-icons add-review__star" data-index="5" aria-pressed="false">star_border</a>
    </div>
    <button class="add-review__rate-button mdc-button" disabled>Rate</button>
  </div>
</div>



<aside id="add-review-modal"
  class="mdc-dialog"
  role="alertdialog"
  aria-labelledby="my-mdc-dialog-label"
  aria-describedby="my-mdc-dialog-description">
  <div class="mdc-dialog__surface add-review-modal__surface">
    <header class="mdc-dialog__header">
      <h2 id="my-mdc-dialog-label" class="mdc-dialog__header__title">
        Add your review
      </h2>
    </header>
    <section id="my-mdc-dialog-description" class="mdc-dialog__body">
      <div class="mdc-text-field name-wrapper">
        <input type="text" id="name" class="mdc-text-field__input" required>
        <label class="mdc-floating-label" for="name">Type your name</label>
        <div class="mdc-line-ripple"></div>
      </div>
      <div class="mdc-text-field mdc-text-field--textarea message-wrapper">
          <textarea id="message" class="mdc-text-field__input" rows="8" cols="40" required></textarea>
          <label for="message" class="mdc-floating-label">Type your message</label>
      </div>
    </section>
    <footer class="mdc-dialog__footer">
      <button type="button" class="mdc-button mdc-dialog__footer__button" id="add-review-button">ADD</button>
    </footer>
  </div>
  <div class="mdc-dialog__backdrop"></div>
</aside>