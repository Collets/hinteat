{% if showplaceholder === "true" %}
  <div class="map-placeholder">
    <picture>
      <source media="(min-width: 450px)" 
        srcset="/assets/img/map/staticmap@640.webp">
      <img class="map-placeholder__image" alt="Map placeholde. Press following button to open the map."
        src="/assets/img/map/staticmap.jpg" 
        srcset="/assets/img/map/staticmap.webp, 
          /assets/img/map/staticmap@2x.webp 2x"/>
    </picture>  
    <button class="mdc-button mdc-button--raised mdc-button--dense" id="open-map">
      Open map
    </button>
  </div>
{% endif %}
<div id="map-container" class="map-wrapper" aria-hidden="{{hideMap}}">
	<div class="mdc-toolbar mdc-toolbar--fixed map-toolbar">
		<div class="mdc-toolbar__row">
			<section class="mdc-toolbar__section mdc-toolbar__section--align-start">
					<a id="close-map" href="#" class="material-icons mdc-toolbar__icon" aria-label="close map">arrow_back</a>
					<!-- <span class="mdc-toolbar__title">Be more specific</span> -->
			</section>
		</div>
  </div>
  <a class="skip-map" aria-label="Skip map" href="#">Skip map</a>
  <div id="map" role="application"></div>
  <div id="afterMap"></div>
</div>