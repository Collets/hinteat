<a class="mdc-list-item reviews-list-item" role="link" tabindex="0" href="#">
  <span class="mdc-list-item__text">
      {{review.name}}
    <span class="mdc-list-item__secondary-text">{{review.comments}}</span>
  </span>
  <span class="mdc-list-item__meta reviews-list-item__rating">
      {% for i in range(0, 5) -%}
        {% if i < review.rating  %}
          <i class="material-icons">star</i>
        {% else %}
          <i class="material-icons">star_border</i>
        {% endif %}
      {%- endfor %}
  </span>
</a>

<aside id="review-detail-{{id}}"
  class="mdc-dialog"
  role="alertdialog"
  aria-labelledby="my-mdc-dialog-label"
  aria-describedby="my-mdc-dialog-description">
  <div class="mdc-dialog__surface">
    <header class="mdc-dialog__header">
      <h2 id="my-mdc-dialog-label" class="mdc-dialog__header__title">
        {{review.name}}
      </h2>
      <span class="reviews-list-item__rating">
          {% for i in range(0, 5) -%}
            {% if i < review.rating  %}
              <i class="material-icons">star</i>
            {% else %}
              <i class="material-icons">star_border</i>
            {% endif %}
          {%- endfor %}
      </span>
    </header>
    <section id="my-mdc-dialog-description" class="mdc-dialog__body">
      <span class="mdc-typography--caption">{{review.date}}</span>
      <p>{{review.comments}}</p>
    </section>
    <footer class="mdc-dialog__footer">
      <button type="button" class="mdc-button mdc-dialog__footer__button mdc-dialog__footer__button--cancel">CLOSE</button>
    </footer>
  </div>
  <div class="mdc-dialog__backdrop"></div>
</aside>